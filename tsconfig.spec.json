{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"]
  },
  "paths": {
    "@application/*": ["src/application/*"],
    "@domain/*": ["src/domain/*"],
    "@infrastructure/*": ["src/infrastructure/*"]
  },
  "include": ["jest.config.ts", "src/**/*.test.ts", "src/**/*.spec.ts", "src/**/*.d.ts"]
}
